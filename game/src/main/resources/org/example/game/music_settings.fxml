<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800" prefWidth="800" style="-fx-background-color: #1a0033;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.game.MusicSettingsController">
    <children>
        <ImageView fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Image/MusicBG.png" />
            </image>
        </ImageView>

        <Text layoutX="146.0" layoutY="231.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MUSIC SETTINGS">
            <font>
                <Font name="Black Stuff Bold" size="80.0" />
            </font>
            <fill>
                <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.37115839243498816">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.33526235818862915" green="0.07699804753065109" blue="0.5197368264198303" />
                            </color>
                        </Stop>
                        <Stop offset="0.743295019157088">
                            <color>
                                <Color red="0.5958333611488342" green="0.2361111044883728" blue="0.75" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="0.8520833253860474" green="0.5069444179534912" blue="1.0" />
                            </color>
                        </Stop>
                    </stops>
                </LinearGradient>
            </fill>
            <effect>
                <DropShadow blurType="GAUSSIAN" height="53.91" radius="22.2325" width="37.02">
                    <color>
                        <Color red="0.9634259343147278" green="0.6342592835426331" blue="1.0" />
                    </color>
                </DropShadow>
            </effect>
        </Text>
        <Label layoutX="353.0" layoutY="265.0" text="Volume" textFill="#901ae4">
            <font>
                <Font name="@Font/Black_Stuff_Bold.ttf" size="24.0" />
            </font>
        </Label>
        <Button fx:id="Play" layoutX="110.0" layoutY="280.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" onAction="#toggleMusic" />
        <Slider fx:id="volumeSlider" layoutX="200.0" layoutY="300.0" majorTickUnit="25.0" minorTickCount="5" prefHeight="30.0" prefWidth="400.0" showTickLabels="true" showTickMarks="true" />

        <Label layoutX="100.0" layoutY="375.0" text="Select Track" textFill="#6c15a9">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <ToggleButton fx:id="defaultTrack" layoutX="275.0" layoutY="370.0" mnemonicParsing="false" onAction="#setDefaultTrack" prefHeight="40.0" prefWidth="250.0" />
        <ToggleButton fx:id="track1Button" layoutX="100.0" layoutY="440.0" mnemonicParsing="false" onAction="#setTrackGure" prefHeight="40.0" prefWidth="250.0" />
        <ToggleButton fx:id="track2Button" layoutX="440.0" layoutY="440.0" mnemonicParsing="false" onAction="#setTrackMoiTrau" prefHeight="40.0" prefWidth="250.0" />
        <ToggleButton fx:id="track3Button" layoutX="100.0" layoutY="510.0" mnemonicParsing="false" onAction="#setTrackPNL" prefHeight="40.0" prefWidth="250.0" />
        <ToggleButton fx:id="track4Button" layoutX="440.0" layoutY="510.0" mnemonicParsing="false" onAction="#setTrackFire" prefHeight="40.0" prefWidth="250.0" />


        <Button cache="true" layoutX="300.0" layoutY="625.0" mnemonicParsing="false" onAction="#backToMenu" prefHeight="40.0" prefWidth="200.0" text="BACK TO MENU" textFill="#680c99">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
